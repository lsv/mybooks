{% extends '::base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-6">
            <h3>Book list</h3>
            {% for book in books.books %}
                {% include '::booklist.html.twig' with {book: book} %}
                {% if not loop.last %}<hr>{% endif %}
            {% endfor %}
        </div>
        <div class="col-md-6">
            <h3>Add book</h3>
            {{ form(form) }}
        </div>
    </div>

{% endblock %}
